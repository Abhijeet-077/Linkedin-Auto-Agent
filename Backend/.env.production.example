# InfluenceOS Backend - Production Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
DEBUG=false
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# =============================================================================
# REDIS CONFIGURATION (Caching & Session Storage)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI Configuration (Primary AI Provider)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# EXTERNAL APIS & SERVICES
# =============================================================================

# LinkedIn API (for posting and analytics)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://yourdomain.com/auth/linkedin/callback

# News API (for trending topics)
NEWS_API_KEY=your-newsapi-key

# Twitter API (for trending topics)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Unsplash API (for stock images)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AI=20
RATE_LIMIT_WINDOW=3600

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-url

# Log Level
LOG_LEVEL=WARNING

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# VECTOR DATABASE (for RAG)
# =============================================================================

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=influenceos-knowledge

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# CORS & SECURITY
# =============================================================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_RAG=true
ENABLE_VECTOR_SEARCH=true
ENABLE_IMAGE_GENERATION=false
ENABLE_ANALYTICS=true
ENABLE_OUTREACH=true
ENABLE_SCHEDULING=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
MOCK_AI_RESPONSES=false
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
