{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "OPENROUTER_API_KEY": "@openrouter_api_key",
    "OPENROUTER_BASE_URL": "https://openrouter.ai/api/v1",
    "HUGGINGFACE_TOKEN": "@huggingface_token",
    "HOST": "0.0.0.0",
    "PORT": "8000",
    "DEBUG": "false",
    "SECRET_KEY": "@secret_key",
    "LOG_LEVEL": "INFO"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}
